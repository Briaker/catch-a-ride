html
    font-family $openSans
    
html, body
    width 100%
    height 100%
    
h1
    text-align center
    
button
    border-radius 2px
    border none
    padding 1rem 2rem
    color #FFFFFF
    background #333333
    cursor pointer
    transition background 0.3s ease
    margin 0.3rem
    box-shadow 0px 0px 5px 0px rgba(0,0,0,0.3)
    
.container
    flexCenter()
    
.wrapper
    width $wrapperWidth
    height $wrapperHeight
    min-height 600px
    width 100%
    background #FFFFFF
    display flex
    flexCenter()
    flex-direction column
    
.innerWrapper
    display flex
    width 100%
    height 100%
    position relative
    
.findNearByButtonWrapper
    width 100%
    display flex
    justify-content center
    bottom 2rem
    position absolute
    z-index 4
    
button.transitType
    width 50px
    height 50px
    color rgba(0,0,0,0)
    
button.bus
    background url('../images/bus.png') #333333
    background-size 45px
    background-position center center
    background-repeat no-repeat
    
button.rail
    background url('../images/light-rail.png') #333333
    background-size 40px
    background-position center center
    background-repeat no-repeat
    
button.transitType.selected
    background-color #454444
    box-shadow 0px 0px 0px 5px cadetblue