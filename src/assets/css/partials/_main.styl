html
    font-family $openSans
    
body 
	background url('../images/moon_corner_body_01.png') #05060a
	font-family: 'Orbitron', sans-serif;
	background-repeat no-repeat
	
.container 
	flexCenter()
	width 100%
	height 100vh
	
.wrapper
	width $wrapperWidth
	height $wrapperHeight
	background url('../images/glare_03.png') #050b19
	border-radius 20px
	background-size contain
	background-position left center
	background-repeat no-repeat 

section
	flexCenter()
	width $full
	
.game
	flexCenter()
	justify-content space-between
	
.controlsWrapper
	display flex
	flex-direction column
	// flex-wrap wrap
	width 80%
	padding 85px
	// background purple
	
.questionWrapper
	background url('../images/expression_window_03.png')
	background-repeat no-repeat
	background-position center center
	background-size contain
	flexCenter()
	flex-direction column
	width 740px
	height 320px
	
.questions
	font-size 22px
	
.timerWrapper
	position relative
	top 40px
	left 60px
	bottom 0
	width 100%
	height 100px
	text-align center
	
.timer
	width 30%
	// background brown
	

/********************
BUTTONS/CONTROLS
********************/

.buttonWrapper
	width 100%
	margin 30px 0 
	// background blue
	display flex
	justify-content space-around
	
	
.buttonWrapper button
	text-transform uppercase
	color #fff
	font-size 30px
	font-weight 400
	
	
	
button.true
	background url('../images/true_button_03.png')
	background-repeat no-repeat
	width 156px
	height 156px
	border none
	margin-right 10px
	
button.false
	background url('../images/false_button_03.png')
	background-repeat no-repeat
	width 156px
	height 156px
	border none
	
/********************
FUEL
********************/

.fuelWrapper
	flexCenter()
	flex-direction column
	width 100%
	color #fff
	
.fuel
	width 642px
	padding-right 50px
	padding-bottom: 10px
	text-align right
	text-transform uppercase
	font-size 25px
	letter-spacing  5px

.fuelGaugeWrapper
	position relative
	width 642px
	height 104px
		
.fuelGaugeFiller
	background linear-gradient(0deg, #536DB8, white)
	width 602px
	height 80px
	top 50%
	left 50%
	transform translate(-50%, -50%)
	position absolute

.fuelGaugeFillerReserve
	background linear-gradient(0deg, brown, white)
	width 15%
	left 0
	height 80px
	position absolute
	z-index 5

.fuelGaugeFillerCover
	background #050b19
	width 90%
	right 0
	height 80px
	position absolute
	z-index 5
	
.fuelGaugeFrame
	width 642px
	height 104px
	position absolute
	background url('../images/fuel_bar_03.png')	
	background-repeat no-repeat
	background-size cover
	
	

.spaceWrapper
	flexCenter()
	margin 25px
	margin-left 0
	border 10px solid #536DB8
	border-radius 20px
	width 35%
	height 750px
	background url('../images/space.jpg') black
	background-position center 100%
	transition 2s all ease
	background-repeat no-repeat
	position relative
	overflow hidden
	
.rocket
	transition 2s all ease
	position absolute
	height 350px
	// flexCenter()
	svg
		height 350px
		width 200px

.rocket.earth
	bottom 0
	
.rocket.space
	bottom 50%
	transform translateY(50%)
	
.rocket.moonLanding
	top 1%
	transform rotate(180deg)
	
.moon
	transition 1.2s all ease
	position absolute
	top -65%
	svg
		height 600px
		width 600px
		
.moon.hide
	transform translateY(-50%)


.grass
	transition 1.2s all ease
	position absolute
	bottom -10px
	svg
		min-width 100%
		height 100px
		width 1400px
		
.grass.hide
	transform translateY(100%)

.question
	color $questionColor

.question .value
	font-weight 600
	// transition 2s color ease
	
.question .comparisonOperator
	font-weight 600
	color darken($questionColor, 8)
	
.question .logicOperator
	font-weight 600
	color darken($questionColor, 8)
	
.question.correct > *
	animation 0.4s linear 0s flashCorrect
	
.question.incorrect > *
	animation 0.4s linear 0s flashIncorrect
	

// ANIMATIONS
@keyframes flashCorrect
	30%
		color $questionColorCorrect
	50%
		color $questionColorCorrect
	60%
		color $questionColor
		

@keyframes flashIncorrect
	30%
		color $questionColorIncorrect
	50%
		color $questionColorIncorrect
	60%
		color $questionColor