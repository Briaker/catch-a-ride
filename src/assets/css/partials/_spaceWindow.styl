.spaceWrapper
    flexCenter()
    margin 25px
    margin-left 0
    border 10px solid #536DB8
    border-radius 20px
    width 35%
    height 750px
    background url('../images/space.jpg') black
    background-position center 100%
    transition 1s background-position ease
    background-repeat no-repeat
    position relative
    overflow hidden
    
.spaceWrapper.moonLanding
    width 100%
    margin-left 25px
    
.rocket
    transition 2s all ease
    position absolute
    height 350px
    transform translate(0,0)
    svg
        height 350px
        width 200px

.rocket.earth
    bottom 0
    
.rocket.space
    bottom 50%
    transform translate(0%,50%)
    
.rocket.moonLanding
    top 1%
    transform rotate(180deg)

#flameOne
    opacity 1
    animation 0.4s ease-in-out 0s flameOne infinite

#flameTwo
    opacity 0
    animation 0.4s ease-in-out 0s flameTwo infinite

.flamesOff
    display none
    
.moon
    transition 1.2s all ease
    position absolute
    top -50%
    transform translateY(-25%)
    svg
        height 600px
        width 600px
        
.moon.hide
    transform translateY(-100%)


.grass
    transition 1.2s all ease
    position absolute
    bottom -10px
    svg
        min-width 100%
        height 100px
        width 1400px
        
.grass.hide
    transform translateY(100%)