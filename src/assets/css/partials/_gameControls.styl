/********************
CONTROLS WRAPPER 
********************/   
    
.controlsWrapper
    display flex
    flex-direction column
    align-items center
    width 80%
    opacity 1
    transition 1s opacity ease
    
.controlsWrapper.moonLanding
    animation 0.4s linear 0s fadeOut forwards
    
.questionWrapper
    background url('../images/expression_window_03.png')
    background-repeat no-repeat
    background-position center center
    background-size contain
    flexCenter()
    flex-direction column
    width 740px
    height 320px
    
.question
    margin 0
    height 2rem
    font-size 40px
    
.mediumQuestion
    font-size 30px
    
.largeQuestion
    font-size 25px
    
.question
    color $questionColor

.question .value
    font-weight 600
    
.question .comparisonOperator
    font-weight 600
    color darken($questionColor, 8)
    
.question .logicOperator
    font-weight 600
    color darken($questionColor, 8)
    
.question.correct > *
    animation 0.4s linear 0s flashCorrect
    
.question.incorrect > *
    animation 0.4s linear 0s flashIncorrect
    
.timerWrapper
    position relative
    top 100px
    left 60px
    bottom 0
    width 100%
    height 100px
    text-align center
    
.timer
    width 30%
    

/********************
BUTTONS/CONTROLS
********************/

.buttonWrapper
    width 100%
    margin 30px 0 
    // background blue
    display flex
    justify-content space-around
    
.buttonWrapper button
    text-transform uppercase
    text-shadow 2px 2px rgba(0,0,0,0.5)
    width 156px
    height 156px
    color #FFFFFF
    font-size 30px
    font-weight 400
    outline none
    border none
    
button.true
    background url('../images/true_button_03.png')
    background-repeat no-repeat
    
button.false
    background url('../images/false_button_03.png')
    background-repeat no-repeat
   
    
/********************
FUEL
********************/

.fuelWrapper
    flexCenter()
    flex-direction column
    width 80%
    color #FFFFFF
    
.fuelInfoWrapper
    display flex
    justify-content center
    width 80%
    text-transform uppercase
    font-size 25px
    letter-spacing 5px
    text-shadow 2px 2px rgba(0,0,0,0.5)
    
.fuel
    width 50%
    padding-bottom: 10px
    text-align right

// 104 / 642 * 100 = 16.1993% 
// imageHeight / imageWidth = paddingHeight
.fuelGaugeWrapper
    position relative
    width 100%
    padding-top 16.1993%
    height 0
    z-index 5
        
.fuelGaugeFiller
    position absolute
    width 100%
    left 0
    top 0
    bottom 0
    background linear-gradient(0deg, #536DB8, white)
    border-radius 60px
    z-index 2

.fuelGaugeFillerReserve
    position absolute
    width 15%
    left 0
    top 0
    bottom 0
    background linear-gradient(0deg, brown, white)
    border-radius 50px
    z-index 3

.fuelInnerWrapper
    position absolute
    margin 2%
    left 0
    right 0
    top 0
    bottom 0
        
.fuelGaugeFillerCover
    position absolute
    background #050b19
    transition 0.5s width ease
    right 1%
    top 0
    bottom 0
    z-index 4
    
.fuelGaugeFrame
    position absolute
    background url('../images/fuel_bar_03.png')
    background-size 100%
    left 0
    right 0
    top 0
    bottom 0
    z-index 5   