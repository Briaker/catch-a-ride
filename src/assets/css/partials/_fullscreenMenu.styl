/********************
FULLSCREEN MENU WRAPPER 
********************/   
    
.fullscreenMenuWrapper
    flexCenter()
    flex-direction column
    position absolute
    padding 10%
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,0.8)
    z-index 100

.fullscreenMenu
    flexCenter()
    flex-direction column
    background #050b19
    width 100%
    height 100%
    border-radius 20px
    letter-spacing 1.4px

.fullscreenMenu button
    margin 20px
    padding 10px
    background #EFA53D
    border 2px solid #F95200
    border-radius 20px
    font-weight 600
    
.fullscreenMenu button:hover
    background #EC7D13
    border 2px solid #B25102
    
.victoryWrapper, .fullscreenMenuWrapper.victory
    background none
    
.victoryWrapper
    justify-content flex-end

.menuHide
    display none